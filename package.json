{
  "name": "web-asr-core",
  "version": "0.1.0",
  "description": "WebASR Core - Stateless TypeScript services for VAD, WakeWord and Whisper",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && node fix-imports.js",
    "build:raw": "tsc",
    "fix-imports": "node fix-imports.js",
    "bundle": "node build.js",
    "build:all": "npm run build && npm run bundle",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "vad",
    "wakeword",
    "whisper",
    "speech-recognition",
    "webassembly",
    "onnx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@huggingface/transformers": "^3.7.3",
    "onnxruntime-web": "^1.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.3.0"
  }
}
