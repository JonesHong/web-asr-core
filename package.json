{
  "name": "web-asr-core",
  "version": "0.7.1",
  "description": "WebASR Core - Browser-based speech processing with VAD, WakeWord and Whisper (includes ULTIMATE all-in-one CDN version)",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/web-asr-core.ultimate.min.js",
  "jsdelivr": "dist/web-asr-core.ultimate.min.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "browser": "./dist/web-asr-core.ultimate.min.js"
    },
    "./slim": "./dist/web-asr-core.umd.min.js",
    "./all": "./dist/web-asr-core.all.min.js",
    "./ultimate": "./dist/web-asr-core.ultimate.min.js",
    "./ort/*.wasm": "./dist/*.wasm",
    "./ort/*.mjs": "./dist/*.mjs"
  },
  "browser": "dist/web-asr-core.umd.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JonesHong/web-asr-core.git"
  },
  "homepage": "https://github.com/JonesHong/web-asr-core#readme",
  "bugs": {
    "url": "https://github.com/JonesHong/web-asr-core/issues"
  },
  "scripts": {
    "build": "tsc && node fix-imports.js",
    "build:raw": "tsc",
    "fix-imports": "node fix-imports.js",
    "bundle": "node build.js",
    "build:all": "npm run build && npm run bundle",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build:all",
    "prepare": "npm run build:all"
  },
  "keywords": [
    "vad",
    "wakeword",
    "whisper",
    "speech-recognition",
    "webassembly",
    "onnx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@huggingface/transformers": "^3.7.3",
    "onnxruntime-web": "^1.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.3.0"
  }
}
